<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_textview1"
        android:text="标题:"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_text1"
        android:text=""
        android:maxEms="15"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/my_textview1"
        android:layout_toEndOf="@+id/my_textview1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_textview2"
        android:text="内容:"
        android:textSize="20sp"
        android:layout_toLeftOf="@+id/my_text1"
        android:layout_toStartOf="@+id/my_text1"
        android:layout_below="@+id/my_text1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_text2"
        android:hint=""
        android:background="@null"
        android:gravity="left|top"
        android:textSize="14sp"
        android:layout_alignRight="@+id/my_text1"
        android:layout_alignEnd="@+id/my_text1"
        android:layout_below="@+id/my_text1"
        android:layout_above="@+id/button8"
        android:layout_alignLeft="@+id/my_textview2"
        android:layout_alignStart="@+id/my_textview2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>